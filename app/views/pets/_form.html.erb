<%= form_for @pet, :html => { multipart:true, :class => "form-horizontal pet" } do |f| %>

  <% if @pet.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :idade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :idade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:idade) %>
  </div>
  <div class="form-group">
    <%= f.label :cidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cidade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cidade) %>
  </div>
  <div class="form-group">
    <%= f.label :uf, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :uf, :class => 'form-control' %>
    </div>
    <%=f.error_span(:uf) %>
  </div>
  <div class="form-group">
    <%= f.label :images, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :images, :class => 'form-control' %>
    </div>
    <%=f.error_span(:images) %>
  </div>
  <div class="form-group">
    <%= f.label :sexo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :sexo, Pet.sexos.keys, :class => 'form-control', include_blank: "Selecione uma opção" %>
    </div>
    <%=f.error_span(:sexo) %>
  </div>
  <div class="form-group">
    <%= f.label :especie,  :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :especie, Pet.especies.keys, :class => 'form-control' , include_blank: "Selecione uma opção" %>
    </div>
    <%=f.error_span(:especie) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pets_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
